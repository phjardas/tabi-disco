{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "sourceMap": true,
    "declaration": true,
    "outDir": "build",
    "sourceRoot": "./src",
    "lib": ["es2015", "esnext.asynciterable"],
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "typeRoots": ["./typings", "./node_modules/@types"]
  }
}
